
  <div class="greet">
    <h2>Welcome, {{username}},  Lets Chat!</h2>
  </div>

    <form class="add-new-user">
      <div class="form-group">
        <label for="user-name">Search User</label>
        <input class="form-input" type="text" id="user-name" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>
  </div>

  {{#if userlist}}
  <div class="friend-list">
    <h1>Your Friend List</h1>
    <h2>{{user.list}}</h2>


    {{#each user.list as |user.list|}}
      <div class="delete-user">
        <h4> href="/user/{{username}}</h4>
        <button class="remove-user" data-id="{{username}}">DELETE</button>
      </div>
  </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/public/js/profile.js"></script>

{{{body}}}




